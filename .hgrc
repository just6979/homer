[ui]
username = Justin White <just6979@gmail.com>
style = compact
ignore = ~/.hgignore
merge = meld

[extensions]
churn =
color =
extdiff =
fetch =
graphlog =
highlight =
pager =
progress =
purge =
zeroconf =
bookmarks =

[alias]
st = status -mard
sc = status -mardc
sa = status -mardciu
# show last 4 changes
last = log -p -r -1:-4

[extdiff]
cmd.meld =

[web]
cacerts = /etc/pki/tls/certs/ca-bundle.crt

[tortoisehg]
editor = gvim
closeci = True
statustab = 2
postpull = update
promoteditems = commit, log, synch
vdiff = meld
shell = gnome-terminal
tabwidth = 4
