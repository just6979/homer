[ui]
username = Justin White <just6979@gmail.com>
style = compact
ignore = ~/.hgignore

[extensions]
churn =
color =
extdiff =
fetch =
graphlog =
highlight =
pager =
progress =
purge =
zeroconf =
hgext.bookmarks =
hggit =

[alias]
st = status -mard
sc = status -mardc
sa = status -mardciu
# show last 4 changes
last = log -p -r -1:-4

[extdiff]
cmd.meld =

[web]
cacerts = /etc/pki/tls/certs/ca-bundle.crt

[tortoisehg]
editor = gedit
closeci = True
statustab = 2
postpull = update

